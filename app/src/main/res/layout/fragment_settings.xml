<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Settings.SettingsFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="270dp"
        android:layout_height="388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Settings_textView_Sound"
            android:layout_width="103dp"
            android:layout_height="wrap_content"

            android:text="Sound: "
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/Settings_textView_Background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Push messages:"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/Settings_textView_Popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Message Popup: "
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/colorTaskBar"
            android:text="Number: "
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/Settings_my_name_TextView"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@color/colorTaskBar"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/colorTaskBar"
            android:text="Name: "
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/Settings_my_number_textView"
            android:layout_width="169dp"
            android:layout_height="30dp"
            android:background="@color/colorTaskBar"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:background="#f00a0a"
            android:text="Clear All Settings and Reregister"
            app:layout_column="1"
            app:layout_row="8" />

        <ToggleButton
            android:id="@+id/setting_push_toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTaskBar"
            android:checked="true"
            android:text="ToggleButton"
            app:layout_column="1"
            app:layout_row="6" />

        <ToggleButton
            android:id="@+id/setting_sound_toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTaskBar"
            android:checked="true"
            android:text="ToggleButton"
            app:layout_column="1"
            app:layout_row="5" />

        <ToggleButton
            android:id="@+id/setting_popup_toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTaskBar"
            android:checked="true"
            android:text="ToggleButton"
            app:layout_column="1"
            app:layout_row="4" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2" />

        <Space
            android:layout_width="80dp"
            android:layout_height="35dp"
            app:layout_column="1"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="64dp"
            android:layout_height="52dp"
            android:src="@drawable/left_hand_menu_settings"
            app:layout_column="0"
            app:layout_row="8" />

        <Space
            android:layout_width="70dp"
            android:layout_height="10dp"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>